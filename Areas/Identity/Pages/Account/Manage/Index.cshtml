@page
@model IndexModel
@{
    ViewData["Title"] = "Manage Profile";
}


<h3>@ViewData["Title"]</h3>
@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success">@Model.StatusMessage</div>
}
<div class="container mt-4">
    <div class="card shadow-lg p-4" style="max-width: 1000px; width: 100%; border-radius: 12px;">
        <div class="text-center mb-4">
            <i class="bi bi-person-circle text-primary" style="font-size: 3rem;"></i>
            <h3 class="mt-2">Manage Profile</h3>
            <p class="text-muted">Update your profile details below.</p>
        </div>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Username (Disabled) -->
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>

            <!-- Full Name (Read-Only) -->
            <div class="form-floating mb-3">
                <input class="form-control" value="@Model.FullName" placeholder="Your full name" disabled />
                <label>Full Name</label>
            </div>

            <!-- Address (Read-Only) -->
            <div class="form-floating mb-3">
                <input class="form-control" value="@Model.Address" placeholder="Your address" disabled />
                <label>Address</label>
            </div>

            <!-- Phone Number (Editable) -->
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
