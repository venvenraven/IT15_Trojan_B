@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            overflow-x: hidden;
        }

        .hero {
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100vw;
            height: 80vh;
            text-align: center;
            color: white;
            overflow: hidden;
        }

            .hero::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: url('/images/bg-construction.jpg');
                background-repeat: no-repeat;
                background-position: center;
                background-size: cover;
                z-index: -2;
            }


            .hero::after {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.6);
                z-index: -1;
            }

        .logo {
            max-width: 150px;
            margin-bottom: 20px;
        }

        .container {
            padding: 0;
            margin: 0;
            max-width: 100%;
        }

        .services, .why-choose {
            padding: 50px 15px;
            text-align: center;
        }

        .service-box {
            background: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
            margin-bottom: 20px;
        }


        .why-choose {
            position: relative;
            background-image: url('/images/tb_house.png');
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
            color: black;
            padding: 60px 15px;
            text-align: center;
        }


            .why-choose::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.6);
                z-index: -1;
            }

            .why-choose h2 {
                font-size: 2.5rem;
                margin-bottom: 30px;
                font-weight: bold;
                color: whitesmoke;
            }

        .why-box {
            background: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
            margin-bottom: 20px;
        }

            .why-box h4 {
                font-size: 1.5rem;
                margin-bottom: 10px;
            }

            .why-box p {
                font-size: 1rem;
            }

            .why-box i {
                font-size: 40px;
                color: #ffcc00;
                margin-bottom: 10px;
            }

        .custom-footer {
            background-color: #333;
            color: white;
            padding: 10px 0;
            text-align: center;
            width: 100%;
            position: absolute;
            bottom: 0;
            left: 0;
        }

            .custom-footer a {
                color: dodgerblue;
                text-decoration: none;
            }

                .custom-footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <!-- 🚀 Lockout Notification Toast -->
    @if (TempData["LockoutMessage"] != null)
    {
        <div class="container">
            <div id="lockoutToast" class="toast align-items-center text-white bg-danger position-fixed"
                 style="top: 80px; right: 20px; z-index: 1050;" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        @TempData["LockoutMessage"]
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                            aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    <div class="hero">
        <img src="/images/trojan builders_logo.png" alt="Logo" class="logo" style="filter: drop-shadow(0px 0px 10px white);">
        <h1 class="display-4">Welcome to Our Site</h1>
        <p class="lead" style="color:  #ffcc00; font-weight: bold;">PLAN. BUILD. SUCCESS</p>
        <a href="/Identity/Account/Login" class="btn btn-get-started" style="font-weight: 600;">Get Started</a>
       
    </div>
    <section id="about-us" class="about-us py-5 text-center" style="background-color: whitesmoke;">

        <div class="container">
            <h2 class="mb-4">About Us</h2>
            <p class="lead">Trojan Builders is a premier construction management company dedicated to streamlining project execution with cutting-edge solutions.</p>
            <div class="row mt-4">
                <div class="col-md-4">
                    <i class="fas fa-hard-hat fa-3x text-primary"></i>
                    <h4 class="mt-3">Expertise</h4>
                    <p>Years of experience in delivering top-notch construction solutions.</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-lightbulb fa-3x text-primary"></i>
                    <h4 class="mt-3">Innovation</h4>
                    <p>Utilizing advanced technology to optimize construction processes.</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-handshake fa-3x text-primary"></i>
                    <h4 class="mt-3">Commitment</h4>
                    <p>Dedicated to exceeding client expectations with every project.</p>
                </div>
            </div>
        </div>
    </section>

    <section id="services" class="services">
        <h2>Our Services</h2>
        <div class="row justify-content-center">
            <div class="col-md-3 service-box">
                <h3>1</h3>
                <h4>Work Order Management</h4>
                <p>Track, assign, and complete tasks seamlessly.</p>
            </div>
            <div class="col-md-3 service-box">
                <h3>2</h3>
                <h4>Job Scheduling</h4>
                <p>Automate and optimize workforce allocation for maximum efficiency.</p>
            </div>
            <div class="col-md-3 service-box">
                <h3>3</h3>
                <h4>Real-Time Updates</h4>
                <p>Stay informed with instant notifications and progress tracking.</p>
            </div>
        </div>
    </section>

    <section class="why-choose">
        <h2>Why Choose Us?</h2>
        <div class="row justify-content-center">
            <div class="col-md-3 why-box">
                <i class="fas fa-calendar-alt"></i>
                <h4>Faster Job Scheduling</h4>
                <p>Automate task assignments and minimize delays.</p>
            </div>
            <div class="col-md-3 why-box">
                <i class="fas fa-users-cog"></i>
                <h4>Optimized Workforce Allocation</h4>
                <p>Assign the right people to the right tasks for maximum efficiency.</p>
            </div>
            <div class="col-md-3 why-box">
                <i class="fas fa-bell"></i>
                <h4>Real-Time Project Updates</h4>
                <p>Stay informed with instant notifications and seamless coordination.</p>
            </div>
            <div class="col-md-3 why-box">
                <i class="fas fa-money-bill-wave"></i>
                <h4>Cost-Effective Solutions</h4>
                <p>Reduce waste, cut costs, and maximize productivity.</p>
            </div>
        </div>
    </section>

    <section id="contact-us" class="contact-us py-5 text-center">
        <div class="container">
            <h2 class="mb-4">Contact Us</h2>
            <p class="lead">We’d love to hear from you. Get in touch with us for inquiries, collaborations, or project consultations.</p>
            <div class="row mt-4">
                <div class="col-md-4">
                    <i class="fas fa-envelope fa-3x text-primary"></i>
                    <h4 class="mt-3">Email</h4>
                    <p>contact@trojanbuilders.com</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-phone fa-3x text-primary"></i>
                    <h4 class="mt-3">Phone</h4>
                    <p>+1 234 567 890</p>
                </div>
                <div class="col-md-4">
                    <i class="fas fa-map-marker-alt fa-3x text-primary"></i>
                    <h4 class="mt-3">Address</h4>
                    <p>1234 Builder St, Construction City, PH</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Privacy Policy Modal -->
    <div class="modal fade" id="privacyModal" tabindex="-1" aria-labelledby="privacyModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <!-- Larger modal for better readability -->
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header text-white" style="background-color: #343a40;">
                    <h4 class="modal-title fw-bold" id="privacyModalLabel">
                        <i class="bi bi-shield-lock"></i> Privacy Policy
                    </h4>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Modal Body -->
                <div class="modal-body" style="background-color: #f8f9fa;">
                    <p class="text-muted">
                        <i class="bi bi-calendar-check"></i> <strong>Effective Date:</strong> March 2025
                    </p>

                    <hr>

                    <h5 class="fw-bold"><i class="bi bi-person-lines-fill"></i> 1. Data We Collect</h5>
                    <p>We collect the following types of information:</p>
                    <ul>
                        <li><i class="bi bi-person"></i> <strong>Personal details:</strong> Name, email, contact information.</li>
                        <li><i class="bi bi-key"></i> <strong>Account data:</strong> Login credentials, preferences.</li>
                        <li><i class="bi bi-file-earmark-text"></i> <strong>Project details:</strong> Work orders, scheduling data.</li>
                        <li><i class="bi bi-bar-chart"></i> <strong>System logs:</strong> Usage analytics, security monitoring.</li>
                    </ul>

                    <h5 class="fw-bold"><i class="bi bi-gear"></i> 2. How We Use Your Data</h5>
                    <ul>
                        <li><i class="bi bi-calendar-check"></i> Manage work orders and scheduling efficiently.</li>
                        <li><i class="bi bi-bell"></i> Provide real-time project updates and alerts.</li>
                        <li><i class="bi bi-shield-lock"></i> Enhance security through monitoring and analytics.</li>
                        <li><i class="bi bi-boxes"></i> Optimize inventory and workforce allocation.</li>
                    </ul>

                    <h5 class="fw-bold"><i class="bi bi-lock-fill"></i> 3. Data Security</h5>
                    <p>We implement encryption, authentication protocols, and monitoring systems to safeguard your data.</p>

                    <h5 class="fw-bold"><i class="bi bi-share-fill"></i> 4. Data Sharing</h5>
                    <p>We do not sell your data. It is only shared with:</p>
                    <ul>
                        <li><i class="bi bi-people"></i> Authorized personnel within our company.</li>
                        <li><i class="bi bi-bank"></i> Legal authorities when required.</li>
                        <li><i class="bi bi-shield-check"></i> Trusted third-party service providers under strict security measures.</li>
                    </ul>

                    <h5 class="fw-bold"><i class="bi bi-check-circle"></i> 5. Your Rights</h5>
                    <p>You have the right to:</p>
                    <ul>
                        <li><i class="bi bi-eye"></i> Access and review your personal data.</li>
                        <li><i class="bi bi-pencil-square"></i> Request updates or corrections.</li>
                        <li><i class="bi bi-trash"></i> Request deletion of your data.</li>
                    </ul>
                    <p>For any concerns, please reach out to us.</p>

                    <h5 class="fw-bold"><i class="bi bi-envelope-fill"></i> 6. Contact Us</h5>
                    <p>If you have questions, email us at:</p>
                    <p class="fw-bold">
                        <a href="mailto:contact@trojanbuilders.com">
                            <i class="bi bi-envelope"></i> contact@trojanbuilders.com
                        </a>
                    </p>
                </div>

                <!-- Modal Footer -->               
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">
                        <i class="bi bi-check-lg"></i> I Understand
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">


    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">


    <footer class="custom-footer">
        <div class="container text-center">
            <p>
                &copy; 2025 Trojan Builders |
                <a href="#" data-bs-toggle="modal" data-bs-target="#privacyModal">Privacy Policy</a>
            </p>
        </div>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var lockoutToast = document.getElementById("lockoutToast");
            if (lockoutToast) {
                var toast = new bootstrap.Toast(lockoutToast);
                toast.show();
            }
        });
    </script>
</body>
</html>