    <script>
                     document.addEventListener("DOMContentLoaded", function () {
            // Sidebar Toggle
            var el = document.getElementById("wrapper");
            var toggleButton = document.getElementById("menu-toggle");

            toggleButton.onclick = function () {
                el.classList.toggle("toggled");
            };

            // Sidebar Submenu Toggle
            document.querySelectorAll(".item").forEach(item => {
                let btn = item.querySelector(".sub-btn");
                let submenu = item.querySelector(".sub-menu");
                let chevron = item.querySelector(".chevron-icon");

                btn.addEventListener("click", function (event) {
                    event.stopPropagation();

                    let isOpen = submenu.style.display === "block";

                    // Close all other submenus
                    document.querySelectorAll(".sub-menu").forEach(menu => {
                        menu.style.display = "none";
                        let icon = menu.previousElementSibling.querySelector(".chevron-icon");
                        if (icon) icon.classList.remove("rotate-chevron");
                    });

                    // Toggle the clicked menu
                    if (!isOpen) {
                        submenu.style.display = "block";
                        chevron.classList.add("rotate-chevron");
                    }
                });
            });

            // Close submenus when clicking outside
            document.addEventListener("click", function (event) {
                if (!event.target.closest(".item")) {
                    document.querySelectorAll(".sub-menu").forEach(menu => {
                        menu.style.display = "none";
                        let icon = menu.previousElementSibling.querySelector(".chevron-icon");
                        if (icon) icon.classList.remove("rotate-chevron");
                    });
                }
            });
        });

        // Dark Mode Toggle
        const darkModeToggle = document.getElementById("darkModeToggle");

        function toggleDarkMode() {
            document.body.classList.toggle("dark-mode");
            document.getElementById("wrapper").classList.toggle("dark-mode");
            document.getElementById("page-content-wrapper").classList.toggle("dark-mode");
            document.getElementById("sidebar-wrapper").classList.toggle("dark-mode");

            const employeeTable = document.getElementById("employeeTable");
            if (document.body.classList.contains("dark-mode")) {
                employeeTable.classList.add("table-dark");
                localStorage.setItem("darkMode", "enabled");
                darkModeToggle.innerHTML = '<i class="fas fa-sun"></i>';
            } else {
                employeeTable.classList.remove("table-dark");
                localStorage.setItem("darkMode", "disabled");
                darkModeToggle.innerHTML = '<i class="fas fa-moon"></i>';
            }

            // Fix overlay issue (if any)
            document.body.classList.remove("modal-open");
            document.querySelector(".modal-backdrop")?.remove();
        }

        darkModeToggle.addEventListener("click", toggleDarkMode);

        // Apply dark mode if previously saved
        if (localStorage.getItem("darkMode") === "enabled") {
            toggleDarkMode();
        }

        // Search Bar Filtering
        document.getElementById("searchBar").addEventListener("keyup", function () {
            let filter = this.value.toLowerCase();
            let rows = document.querySelectorAll("#employeeTable tbody tr");

            rows.forEach(row => {
                let text = row.innerText.toLowerCase();
                row.style.display = text.includes(filter) ? "" : "none";
            });
        });

        // Handle Edit Status Button
        document.querySelectorAll(".edit-status").forEach(button => {
            button.addEventListener("click", function () {
                let row = this.closest("tr");
                let statusCell = row.querySelector("td:nth-child(8) span");

                let newStatus = prompt("Enter new status (Active/Inactive):");
                if (newStatus) {
                    statusCell.textContent = newStatus;
                    statusCell.className = `badge ${newStatus.toLowerCase() === 'active' ? 'bg-success' : 'bg-danger'}`;
                }
            });
        });

        // Handle Archive Button
        document.querySelectorAll(".archive").forEach(button => {
            button.addEventListener("click", function () {
                let row = this.closest("tr");
                row.remove();
                alert("Employee archived successfully.");
            });
        });

    </script>
