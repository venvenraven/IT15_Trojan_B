<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
</head>
<body>
    <div class="content">
        <div class="container mt-4">
            <div class="row justify-content-center text-center">
                <div class="col-md-4">
                    <div class="card text-white bg-danger mb-3 p-3">
                        <div class="card-body">
                            <h5 class="card-title fs-4"><i class="bi bi-exclamation-triangle"></i> Pending Works</h5>
                            <p class="card-text display-4 fw-bold">12</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-primary mb-3 p-3">
                        <div class="card-body">
                            <h5 class="card-title fs-4"><i class="bi bi-hourglass-split"></i> Upcoming Deadlines</h5>
                            <p class="card-text display-4 fw-bold">4</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-success mb-3 p-3">
                        <div class="card-body">
                            <h5 class="card-title fs-4"><i class="bi bi-check2-circle"></i> Completed Tasks</h5>
                            <p class="card-text display-4 fw-bold">15</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Assigned Projects Table -->
        <div class="row mt-3 bg-secondary text-white p-3 rounded">
            <div class="col-12">
                <h5><i class="bi bi-clipboard-check"></i> Assigned Projects</h5>
                <table class="table table-striped">
                    <thead class="text-white">
                        <tr>
                            <th>Project Name</th>
                            <th>Customer</th>
                            <th>Contact #</th>
                            <th>Job Description</th>
                            <th>Address</th>
                            <th>Deadline</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Project A</td>
                            <td>John Doe</td>
                            <td>09476073904</td>
                            <td>House needs to renovate</td>
                            <td>
                                <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#customerMapModal" onclick="loadCustomerMap(10.3157, 123.8854)">
                                    <i class="bi bi-geo-alt fs-6"></i> View
                                </button>
                            </td>
                            <td>March 15, 2025</td>
                            <td><i class="bi bi-arrow-repeat text-primary"></i></td>
                        </tr>
                        <tr>
                            <td>Project B</td>
                            <td>Jane Smith</td>
                            <td>09089642012</td>
                            <td>Pool under renovation</td>
                            <td>
                                <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#customerMapModal" onclick="loadCustomerMap(14.5995, 120.9842)">
                                    <i class="bi bi-geo-alt fs-6"></i> View
                                </button>
                            </td>
                            <td>April 10, 2025</td>
                            <td><i class="bi bi-gear-wide-connected text-warning"></i></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="row mt-4 bg-secondary text-white p-3 rounded">
            <!-- Scheduling Table -->
            <div class="col-md-6">
                <h5><i class="bi bi-calendar-check"></i> Scheduling</h5>
                <table class="table table-striped">
                    <thead class="text-white">
                        <tr>
                            <th>Task</th>
                            <th>Time</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="scheduleTable">
                        <tr>
                            <td>Site Inspection</td>
                            <td>10:00 AM</td>
                            <td><i class="bi bi-hourglass-split text-warning"></i></td>
                        </tr>
                        <tr>
                            <td>Material Delivery</td>
                            <td>2:00 PM</td>
                            <td><i class="bi bi-x-circle text-danger"></i></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- Completed Tasks Table -->
            <div class="col-md-6">
                <h5><i class="bi bi-check-circle"></i> Completed Tasks</h5>
                <table class="table table-striped">
                    <thead class="text-white">
                        <tr>
                            <th>Task</th>
                            <th>Completion Date</th>
                            <th>Remarks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Foundation Work</td>
                            <td>March 1, 2025</td>
                            <td><i class="bi bi-check-circle text-success"></i> Completed</td>
                        </tr>
                        <tr>
                            <td>Electrical Wiring</td>
                            <td>March 5, 2025</td>
                            <td><i class="bi bi-check-circle text-success"></i> Completed</td>
                        </tr>
                        <tr>
                            <td>Roof Installation</td>
                            <td>March 8, 2025</td>
                            <td><i class="bi bi-check-circle text-success"></i> Completed</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div id="customerMapModal" class="modal fade" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Customer Location</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div id="map" style="height: 400px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function loadCustomerMap() {
    if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(position => {
            let lat = position.coords.latitude;
            let lng = position.coords.longitude;

            setTimeout(() => {
                let map = L.map('map').setView([lat, lng], 15);
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);
                L.marker([lat, lng]).addTo(map);
            }, 500);
        }, error => {
            console.error("Geolocation error:", error);
        });
    } else {
        console.error("Geolocation is not supported by this browser.");
    }
}

    </script>
</body>
</html>
